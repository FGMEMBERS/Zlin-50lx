<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

 <path>Turn2.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>tour</object-name>

    <!-- Objets transparents -->
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>glass.png</texture>
  </animation>

  <animation>
    <type>material</type>
    <object-name>vitre</object-name>
    <object-name>tour</object-name>
    <emission>
      <red>   1.0 </red>
      <green> 0.2 </green>
      <blue>  0.0 </blue>
      <factor-prop>/controls/lighting/instruments-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Ball</object-name>
    <property>/instrumentation/slip-skid-ball/indicated-slip-skid</property>
    <factor>21</factor>
    <min-deg>-19</min-deg>
    <max-deg>19</max-deg>
    <center>
      <x-m>  0.00 </x-m>
      <y-m>  0.00 </y-m>
      <z-m> -0.05 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>


