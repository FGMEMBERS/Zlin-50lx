<?xml version="1.0"?>

<PropertyList>

  <path>z50lx.ac</path>

  <nasal>
    <load>
      var livery_update = aircraft.livery_update.new("Aircraft/Zlin-50lx/Models/Liveries", 10);
    </load>
    <unload>
      livery_update.stop();
    </unload>
  </nasal>

  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>ailes</object-name>
    <object-name>axe</object-name>
    <object-name>axeG</object-name>
    <object-name>roueG</object-name>
    <object-name>axeD</object-name>
    <object-name>roueD</object-name>
    <object-name>axeA</object-name>
    <object-name>roueA</object-name>
    <object-name>bol</object-name>
    <object-name>helice</object-name>
    <object-name>aileronG</object-name>
    <object-name>trimG</object-name>
    <object-name>aileronD</object-name>
    <object-name>trimD</object-name>
    <object-name>derive</object-name>
    <object-name>profondeur</object-name>
    <object-name>trimprof</object-name>
    <object-name>direction</object-name>
    <object-name>trimdir</object-name>
    <object-name>echappe</object-name>
    <object-name>ajout</object-name>
    <object-name>cables</object-name>
    <object-name>antenne</object-name>
    <object-name>pitot</object-name>
    <object-name>tourverriere</object-name>

    <!-- Objets transparents -->
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>fuselage</object-name>
    <object-name>ailes</object-name>
    <object-name>axe</object-name>
    <object-name>axeG</object-name>
    <object-name>roueG</object-name>
    <object-name>axeD</object-name>
    <object-name>roueD</object-name>
    <object-name>axeA</object-name>
    <object-name>roueA</object-name>
    <object-name>bol</object-name>
    <object-name>helice</object-name>
    <object-name>aileronG</object-name>
    <object-name>trimG</object-name>
    <object-name>aileronD</object-name>
    <object-name>trimD</object-name>
    <object-name>derive</object-name>
    <object-name>profondeur</object-name>
    <object-name>trimprof</object-name>
    <object-name>direction</object-name>
    <object-name>trimdir</object-name>
    <object-name>echappe</object-name>
    <object-name>ajout</object-name>
    <object-name>cables</object-name>
    <object-name>antenne</object-name>
    <object-name>pitot</object-name>
    <object-name>tourverriere</object-name>

    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
  </animation>

  <!-- Immatriculation -->
  <model>
    <path>Aircraft/Zlin-50lx/Models/Immat/immat.xml</path>
    <offsets>
      <x-m> 0.000 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.000 </z-m>
    </offsets>
  </model>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Zlin-50lx/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -0.776 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.060 </z-m>
    </offsets>
  </model>

  <!-- Particules pour OSG
  <model>
    <path>Aircraft/Zlin-50lx/Effects/Particles/smoke.xml</path>
    <offsets>
      <x-m>  0.442 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.383 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg>   0.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
  </model> -->

  <!-- Planche de bord -->
  <model>
    <path>Aircraft/Zlin-50lx/Models/Panel/panel.xml</path>
    <offsets>
      <x-m> -1.168 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.140 </z-m>
      <pitch-deg> 0.000 </pitch-deg>
    </offsets>
  </model>

  <animation>
    <name>HeliceComplete</name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
  </animation>

  <!-- L'hélice --> 
  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <property>engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -3.045 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.019 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <object-name>trimG</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor>-20.0</factor>
    <axis>
      <x1-m> -0.581 </x1-m>
      <y1-m> -1.038 </y1-m>
      <z1-m> -0.414 </z1-m>
      <x2-m> -0.730 </x2-m>
      <y2-m> -4.197 </y2-m>
      <z2-m> -0.339 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <object-name>trimD</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor>-20.0</factor>
    <axis>
      <x1-m> -0.730 </x1-m>
      <y1-m>  4.197 </y1-m>
      <z1-m> -0.339 </z1-m>
      <x2-m> -0.581 </x2-m>
      <y2-m>  1.038 </y2-m>
      <z2-m> -0.414 </z2-m>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <object-name>trimprof</object-name>
    <property>controls/flight/elevator</property>
    <factor>15</factor>
    <center>
      <x-m> 2.573 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.401 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <object-name>trimdir</object-name>
    <property>controls/flight/rudder</property>
    <factor>25</factor>
    <axis>
      <x1-m>  2.521 </x1-m>
      <y1-m>  0.000 </y1-m>
      <z1-m> -0.083 </z1-m>
      <x2-m>  2.674 </x2-m>
      <y2-m>  0.000 </y2-m>
      <z2-m>  1.200 </z2-m>
    </axis>
  </animation>

  <!-- Compression -->
  <animation>
    <type>rotate</type>
    <object-name>roueG</object-name>
    <object-name>axeG</object-name>
    <property>gear/gear[0]/compression-norm</property>
    <interpolation>
      <entry>
        <ind>  0.000 </ind>
        <dep> 20.000 </dep>
      </entry>
      <entry>
        <ind> 0.5 </ind>
        <dep> 0.0 </dep>
      </entry>
      <entry>
        <ind>   1.0 </ind>
        <dep> -20.0 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -1.784 </x-m>
      <y-m> -0.370 </y-m>
      <z-m> -0.528 </z-m>
    </center>
    <axis>
      <x> 1.000 </x>
      <y> 0.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>roueD</object-name>
    <object-name>axeD</object-name>
    <property>gear/gear[1]/compression-norm</property>
    <interpolation>
      <entry>
        <ind>   0.000 </ind>
        <dep> -20.000 </dep>
      </entry>
      <entry>
        <ind> 0.5 </ind>
        <dep> 0.0 </dep>
      </entry>
      <entry>
        <ind>  1.0 </ind>
        <dep> 10.0 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -1.784 </x-m>
      <y-m>  0.370 </y-m>
      <z-m> -0.528 </z-m>
    </center>
    <axis>
      <x> 1.000 </x>
      <y> 0.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>gear/gear[0]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -1.968 </x-m>
      <y-m> -1.116 </y-m>
      <z-m> -1.088 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -1.968 </x-m>
      <y-m>  1.116 </y-m>
      <z-m> -1.088 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueA</object-name>
    <property>gear/gear[2]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m>  3.099 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.476 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>tourverriere</object-name>
    <object-name>verriere</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor>-95</factor>
    <axis>
      <x1-m> -1.059 </x1-m>
      <y1-m>  0.338 </y1-m>
      <z1-m>  0.123 </z1-m>
      <x2-m> -0.217 </x2-m>
      <y2-m>  0.370 </y2-m>
      <z2-m>  0.270 </z2-m>
    </axis>
  </animation>

</PropertyList>

