<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <key n="83">
    <name>S</name>
    <desc>Start smoke</desc>
    <binding>
      <command>property-assign</command>
      <property>controls/smoke</property>
      <value>true</value>
    </binding>
  </key>

  <key n="100">
    <name>d</name>
    <desc>Canopy</desc>
    <binding>
      <command>nasal</command>
      <script>doors.crew.toggle();</script>
    </binding>
  </key>

  <key n="117">
    <name>u</name>
    <desc>Stop smoke</desc>
    <binding>
      <command>property-assign</command>
      <property>controls/smoke</property>
      <value>false</value>
    </binding>
  </key>

  <key n="102">
    <name>f</name>
    <desc>Show/Hide fiche</desc>
    <binding>
      <command>property-toggle</command>
      <property>/sim/model/hide-fiche</property>
    </binding>
  </key>

  <key n="97">
    <name>a</name>
    <desc>Autostart</desc>
    <binding>
      <command>property-assign</command>
      <property>controls/electric/battery-switch</property>
      <value>1</value>
    </binding>
    <binding>
      <command>property-assign</command>
      <property>controls/lighting/instrument-lights</property>
      <value>1</value>
    </binding>
    <binding>
      <command>property-assign</command>
      <property>controls/lighting/nav-lights</property>
      <value>1</value>
    </binding>
    <binding>
      <command>property-assign</command>
      <property>controls/lighting/beacon</property>
      <value>1</value>
    </binding>
    <binding>
      <command>property-assign</command>
      <property>/controls/engines/engine/magnetos</property>
      <value>3</value>
    </binding>
  </key>

  <key n="113">
    <name>q</name>
    <desc>Autostop</desc>
    <binding>
      <command>property-assign</command>
      <property>controls/electric/battery-switch</property>
      <value>0</value>
    </binding>
    <binding>
      <command>property-assign</command>
      <property>controls/lighting/instrument-lights</property>
      <value>0</value>
    </binding>
    <binding>
      <command>property-assign</command>
      <property>controls/lighting/nav-lights</property>
      <value>0</value>
    </binding>
    <binding>
      <command>property-assign</command>
      <property>controls/lighting/beacon</property>
      <value>0</value>
    </binding>
    <binding>
      <command>property-assign</command>
      <property>/controls/engines/engine/magnetos</property>
      <value>0</value>
    </binding>
  </key>

</PropertyList>
